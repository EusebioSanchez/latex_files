%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% PARAGRAPH OPTIONS %%%%
%%%%%%%%%%%%%%%%%%%%%%%%%%

% Set the indentation for the first line of each paragraph:
\setlength{\parindent}{0in}

% Set the line space between paragraphs:
%   Generally, if you set parindent to zero, you will want to set this to 
%   \baselineskip to skip one line between paragraphs
\setlength{\parskip}{\baselineskip}

% Indents the first line after a chapter/section:
% \usepackage{indentfirst}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% TITLEPAGE/TOC/ABSTRACT OPTIONS %%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Set the table of contents depth:
%   This will make sure that subsubsections will appear in the table of 
%   contents.
\settocdepth{paragraph}


%%%%%%%%%%%%%%%%%%%%%%%
%%% SECTION OPTIONS %%%
%%%%%%%%%%%%%%%%%%%%%%%

% Set the numbering depth:
%   This will tell latex to number subsubsections as well.
\setsecnumdepth{paragraph}

% Set section to highest numbering if article option set:
\ifartopt
  \renewcommand{\thesection}{\arabic{section}}
\fi

